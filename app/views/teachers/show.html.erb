<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @teacher.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:secondname) %>:</strong></dt>
  <dd><%= @teacher.secondname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @teacher.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:class) %>:</strong></dt>
  <dd><%= @teacher.class %></dd>
  <dt><strong><%= model_class.human_attribute_name(:school) %>:</strong></dt>
  <dd><%= @teacher.school %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              teachers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_teacher_path(@teacher), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              teacher_path(@teacher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
